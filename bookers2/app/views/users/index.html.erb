<!DOCTYPE html>
<html>
  <body>
    <div class='body'>
      <div class='container'>
        <%= flash[:success] %>
      	<div class='row'>
          <div class='col-xs-3'>
            <h2>User info</h2>
            <%= attachment_image_tag current_user, :profile_image,size: "100x100",fallback: "no_image.jpg",class:"attachment user profile_image" %></td>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= current_user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= current_user.introduction %></th>
                </tr>
              </tbody>
            </table>

            <div class="row">
              <%= link_to "",edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            </div>

            <h2>New book</h2>
            <%= form_for(@book) do |f| %>

              <div class="field row">
                <label for="book_title">Title</label>
                <%= f.text_field :title,class:"col-xs-12 book_title" %>
              </div>

              <div class="field row">
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body,class:"col-xs-12 book_body" %>
              </div>

              <div class="actions row">
                <%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %>
              </div>

            <% end %>
          </div>

          <div class='col-xs-9'>
            <h2>Users</h2>
            <table class="table">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <% @users.each do |users| %>
                <tbody>
                  <tr>
                    <td><%= attachment_image_tag users, :profile_image,size: "40x40",fallback: "no_image.jpg",class:"attachment user profile_image fallback" %></td>
                    <td><%= users.name %></td>
                    <td><%= link_to "Show",user_path(users.id) %></td>
                  </tr>
                </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>

    <footer>
        <div class='container'>
  	        <div class='row'>
    	        <div class='col-xs-3 col-xs-offset-9'>
    		        <p>CopyRight Iwasaki.inc</p>
    	        </div>
            </div>
        </div>
    </footer>

  </body>
</html>
