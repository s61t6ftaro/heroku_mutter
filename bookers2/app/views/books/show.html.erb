<!DOCTYPE html>
<html>
  <body>
    <div class='body'>
      <div class='container'>
        <p id="notice"><%= flash[:notice] %></p>
        <div class='row'>
          <div class='col-xs-3'>
            <h2>User info</h2>
            <div class="row">                
              <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg",class:"attachment user profile_image" %></td>
              <table class="table">
                <tbody>
                  <tr><tr>
                  <tr>
                    <th>name<th>
                    <th><%= @book.user.name %><th>
                  <tr>
                    <th>introduction<th>
                    <th><%= @book.user.introduction %></th>
                  <tr>
                </tbody>
              </table>
              <div class="row">            
                <%= link_to "",edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
              </div>
              <h2>New Mutter</h2>
              <%= form_for(@book) do |f| %>
                <div class="field row">
                  <label for="book_title">Title</label>
                  <%= f.text_field :title,class:"col-xs-12 book_title" %>
                </div>
                <div class="field row">
                  <label for="book_opinion">Opinion</label>
                  <%= f.text_area :body,class:"col-xs-12 book_body" %>
                </div>
                <div class="actions row">
                  <%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class='col-xs-9'>
            <h2>Mutter detail</h2>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@book.user.id) do %>
                      <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg',size: "40x40",fallback: "no_image.jpg",class:"attachment user profile_image fallback" %><br>
                      <%= @book.user.name %>
                    <% end %>
                  </td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                  <% if  @book.user.id == current_user.id %>
                    <td><%= link_to "Edit",edit_book_path,class:"btn-sm btn-success" %></td>
                    <td><%= link_to 'Destroy',destroy_book_path,method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn-sm btn-danger destroy_book_17746" %></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <footer>
        <div class='container'>
  	        <div class='row'>
    	        <div class='col-xs-3 col-xs-offset-9'>
    		        <p>CopyRight Iwasaki.inc</p>
    	        </div>
            </div>
        </div>
    </footer>
  </body>
</html>
